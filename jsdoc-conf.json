{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },

    "source": {
        "include": [
            "src"
        ],
        "includePattern": ".+\\.js$",
        "excludePattern": "(^|\\/|\\\\)_",
        "exclude": [
            "src/template.js",
            "src/polyfill.js"
        ]
    },

    "plugins": [
        "plugins/markdown"
    ],

    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true
    },

    "opts": {
        "template": "templates/default",
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true
    }
}
